## BASE LINSTALLER CONFIGURATION FILE FOR SEMPLICE -- END USER WILL NOT (HOPEFULLY) NEED THIS

[linstaller]
distribution = Semplice
modules = welcome.front language.front update.front timezone.front userhost.front partdisks.front bootloader.front mirrorselect.front summary.front partdisks.inst unsquash.inst language.inst timezone.inst userhost.inst network.inst debian.inst semplice.inst mirrorselect.inst clean.inst bootloader.inst fstab.inst end.front
special = partdisks.inst unsquash.inst

[module:unsquash]
image = /live/image/live/filesystem.squashfs

[module:debian]
remove = /live/image/live/filesystem.packages-remove

[module:update]
packages = linstaller linstaller-frontend-cli linstaller-modules-base linstaller-config-semplice alan-ext-linstaller

[module:mirrorselect]
enable_sources = False
sets = debian semplice
