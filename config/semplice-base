## BASE LINSTALLER CONFIGURATION FILE FOR SEMPLICE -- END USER WILL NOT (HOPEFULLY) NEED THIS

[linstaller]
distribution = Semplice
modules = uefidetect.inst welcome.front language.front update.front timezone.front userhost.front partdisks.front bootloader.front bricks.front mirrorselect.front summary.front partdisks.inst unsquash.inst language.inst timezone.inst userhost.inst network.inst debian.inst semplice.inst bricks.inst mirrorselect.inst clean.inst bootloader.inst fstab.inst end.front
special = partdisks.inst unsquash.inst

[module:language]
ask = True

[module:timezone]
ask = True

[module:partdisks]
swap_noformat = True

[module:unsquash]
image = /lib/live/mount/medium/live/filesystem.squashfs

[module:debian]
remove = /lib/live/mount/medium/live/filesystem.packages-remove

[module:update]
packages = linstaller linstaller-frontend-cli linstaller-frontend-glade linstaller-modules-base linstaller-config-semplice alan-ext-linstaller

[module:mirrorselect]
enable_sources = False
sets = debian semplice

# We support only grub currently
[module:bootloader]
bootloader = grub

